        <config-description>
            <parameter name="usbPort" type="text" required="true">
                <label>USB Port Name</label>
                <description>The host name or IP address of the Pentair EasyTouch Controller (e.g. \dev\tty001).</description>
            </parameter>
            <parameter name="binderRemoteAddress" type="text" required="false">
                <label>Binder Remote Address</label>
                <description>The remote address that this binder identifies itself as.  (Typically "0x20").</description>
                <default>0x20</default>
            </parameter>
            <parameter name="protocalAdapterAddress" type="text" required="false">
                <label>Binder Remote Address</label>
                <description>The remote address that the Pentair Protocol Adapter identifies itself as.  (Typically "0x22").</description>
                <default>0x22</default>
            </parameter>
            <parameter name="pollMilliSeconds" type="integer" required="false">
                <label>RS-485 serial line polling interval</label>
                <description>The interval the RS-485 line should be polled in milliseconds</description>
                <default>1000</default>
            </parameter>
            
            <parameter name="mySqlUrl" type="text" required="false">
                <label>Logging MySql URL</label>
                <description>The MySql URL for message logging (e.g. jdbc:mysql://127.0.0.1:3306/OpenHAB).</description>
            </parameter>
            <parameter name="mySqlUser" type="text" required="false">
                <label>Logging MySql User</label>
                <description>The MySql User for message logging (e.g. openhab).</description>
            </parameter>
            <parameter name="mySqlPassword" type="text" required="false">
                <label>Logging MySql Password</label>
                <description>The MySql Password for message logging.</description>
            </parameter>
        </config-description>
    </thing-type>

